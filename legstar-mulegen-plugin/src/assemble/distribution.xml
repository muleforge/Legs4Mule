<assembly>

    <!-- This is a special use of the assembly plugin. We want to benefit from
         maven dependency handling while not actually using maven for building
         Eclipse plugins.
         This assembly will copy over all necessary jars from the current
         dependency set into the lib folder.
         There is still the need to manually update MANIFEST.MF so that it
         knows about the dependencies from an Eclipse plugin perspective. -->
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <outputDirectory>.</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <includes>
                <include>org.mule.transports:mule-transport-legstar-tools</include>
                <include>org.mule.transports:mule-transport-legstar</include>
                <include>org.mule:mule-core</include>
                <include>org.mule.transports:mule-transport-http</include>
            </includes>
        </dependencySet>
    </dependencySets>
  
</assembly>