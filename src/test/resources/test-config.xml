<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mule-configuration PUBLIC "-//MuleSource //DTD mule-configuration XML V1.0//EN"
                                "http://mule.mulesource.org/dtds/mule-configuration.dtd">

<mule-configuration id="Mule_Echo_Sample" version="1.0">

    <description>Connector test config</description>
    <mule-environment-properties enableMessageEvents="true"/>

    <connector name="LegstarConnector" className="org.mule.providers.legstar.LegstarConnector">
        <properties>
            <property name="port" value="8083"/>
        </properties>
    </connector>    

    <model name="testModel">

        <!-- Can't get the standard one to work 
        <mule-descriptor name="aComponent" implementation="org.mule.tck.functional.FunctionalTestComponent">
            <inbound-router>
                <endpoint address="legstar:http://localhost:8083" synchronous="true"/>
            </inbound-router>
        </mule-descriptor>
        -->
        <mule-descriptor name="echoUMO" implementation="org.mule.providers.legstar.functest.EchoComponent">
            <inbound-router>
                <endpoint address="legstar:http://megamouss:8083" synchronous="true"/>
            </inbound-router>
        </mule-descriptor>

    </model>
</mule-configuration>
