<!--
Assembly descriptor for the full distribution.
-->
<assembly>
  <id>LEGSTAR</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>..</directory>
      <outputDirectory>.</outputDirectory>
      <excludes>
          <exclude>target/**</exclude>
          <exclude>dist/**</exclude>
          <exclude>README</exclude>
          <exclude>.project</exclude>
          <exclude>.classpath</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>../doc</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
          <include>*.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../examples/target</directory>
      <outputDirectory>.</outputDirectory>
          <includes>
              <include>*.jar</include>
          </includes>
    </fileSet>
    <!-- The pom in dist results in an empty jar. What we need
         is to override that jar with the one resulting from
         the main pom.  -->
    <fileSet>
      <directory>../target</directory>
      <outputDirectory>lib/opt</outputDirectory>
          <includes>
              <include>*.jar</include>
          </includes>
    </fileSet>
    <fileSet>
      <directory>../src/main/resources/ant</directory>
      <outputDirectory>ant</outputDirectory>
          <includes>
              <include>*.xml</include>
          </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <!-- Samples/Test libraries -->
    <dependencySet>
      <outputDirectory>lib/user</outputDirectory>
      <outputFileNameMapping>${artifactId}.${extension}</outputFileNameMapping>
      <scope>test</scope>
      <includes>
        <include>com.legsem.legstar:legstar-jaxbgen-cases</include>
        <include>com.legsem.legstar:legstar-coxbgen-cases</include>
      </includes>
    </dependencySet>
    <!-- Non-Mule libraries. The main jar was previously included using
         fileset so we exclude that artifact here.  -->
    <dependencySet>
      <outputDirectory>lib/opt</outputDirectory>
      <scope>runtime</scope>
      <excludes>
        <excludes>org.mule.transports:mule-transport-legstar</excludes>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
